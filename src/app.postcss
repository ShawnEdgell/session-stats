@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html, body { @apply h-full overflow-hidden overscroll-none; }

h1, h2, h3, h4, h5, h6 {
    @apply font-bold;
}

.container {
    @apply space-y-3;
}

img {
    @apply rounded-xl;
}

.image-wrapper {
	position: relative;
	width: 100%;
	padding-top: 56.25%; /* 16:9 aspect ratio */
	overflow: hidden;
}

.image-wrapper img {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	object-fit: cover;
}